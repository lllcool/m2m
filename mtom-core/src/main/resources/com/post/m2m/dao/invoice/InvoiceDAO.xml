        <where>
        <include refid="queryCondition"/>
        </where>
    </select>

    <select id="findListByQuery" parameterType="InvoiceQO" resultType="InvoiceListVO">
        select
            <include refid="invoiceColumns"><property name="alias" value="t"/></include>
        from invoice t
        <where>
        <include refid="queryCondition"/>
        </where>
        <include refid="orderCondition"/>
        limit #{startIndex},#{pageSize}
    </select>

    <select id="findOptions" parameterType="OptionQO" resultType="OptionVO">
        select
            t.id as `key`,
            t.invoice as `value`
        from invoice t
        <where>
            <if test="lastKey != null">
                and t.id > #{lastKey}
            </if>
            <if test="matchValue != null and matchValue != '' ">
                and t.invoice = #{matchValue}
            </if>
        </where>
        order by t.id asc
        limit #{limit}
    </select>



