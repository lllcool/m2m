        #{id,jdbcType=VARCHAR},
        #{type,jdbcType=INTEGER},
        #{invoiceName,jdbcType=VARCHAR},
        #{invoiceTitle,jdbcType=VARCHAR}
        )
    </insert>


    <update id="_update" parameterType="InvoicePO">
        update invoice set
            `type`=#{type,jdbcType=INTEGER},
            invoice_name=#{invoiceName,jdbcType=VARCHAR},
            invoice=#{invoiceTitle,jdbcType=VARCHAR}
        where id=#{id,jdbcType=VARCHAR}
    </update>

    <delete id="delete">
        delete from invoice
        where id=#{arg0,jdbcType=VARCHAR}
    </delete>


    <sql id="queryCondition">
        <if test="id != null and id != '' ">
            and t.id = #{id}
        </if>
        <if test="type != null ">
            and t.`type` = #{type}
        </if>
        <if test="invoiceName != null and invoiceName != '' ">
            <bind name="invoiceName_pattern" value="'%' + invoiceName + '%'" />
            and t.invoice_name like #{invoiceName_pattern}
        </if>
        <if test="invoiceTitle != null and invoiceTitle != '' ">
            and t.invoice = #{invoiceTitle}
        </if>
    </sql>

    <sql id="orderCondition">
        order by
            t.id desc
    </sql>

    <select id="findCountByQuery" parameterType="InvoiceQO" resultType="int">
