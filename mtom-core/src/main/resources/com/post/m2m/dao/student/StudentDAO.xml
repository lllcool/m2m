<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.post.m2m.dao.student.StudentDAO">


    <sql id="studentColumns">
        ${alias}.id,
        ${alias}.`name`,
        ${alias}.age
    </sql>


    <select id="findById" resultType="StudentPO">
        select
            <include refid="studentColumns"><property name="alias" value="t"/></include>
        from student t
        <where>
            and t.id = #{arg0}
        </where>
        limit 1
    </select>

    <select id="exist" resultType="boolean">
        select count(1) from student
        <where>
            and id = #{arg0}
        </where>
    </select>

    <insert id="_save" keyProperty="id" parameterType="StudentPO">
        insert into student(
        id,
        `name`,
        age
        ) VALUES (
        #{id,jdbcType=VARCHAR},
        #{name,jdbcType=VARCHAR},
        #{age,jdbcType=INTEGER}
        )
    </insert>


    <update id="_update" parameterType="StudentPO">
        update student set
            `name`=#{name,jdbcType=VARCHAR},
            age=#{age,jdbcType=INTEGER}
        where id=#{id,jdbcType=VARCHAR}
    </update>

    <delete id="delete">
        delete from student
        where id=#{arg0,jdbcType=VARCHAR}
    </delete>


    <sql id="queryCondition">
        <if test="name != null and name != '' ">
            <bind name="name_pattern" value="'%' + name + '%'" />
            and t.`name` like #{name_pattern}
        </if>
        <if test="age != null ">
            and t.age = #{age}
        </if>
    </sql>

    <sql id="orderCondition">
        order by
            t.id desc
    </sql>

    <select id="findCountByQuery" parameterType="StudentQO" resultType="int">
        select count(1) from student t
        <where>
        <include refid="queryCondition"/>
        </where>
    </select>

    <select id="findListByQuery" parameterType="StudentQO" resultType="StudentListVO">
        select
            <include refid="studentColumns"><property name="alias" value="t"/></include>
        from student t
        <where>
        <include refid="queryCondition"/>
        </where>
        <include refid="orderCondition"/>
        limit #{startIndex},#{pageSize}
    </select>

    <select id="findOptions" parameterType="OptionQO" resultType="OptionVO">
        select
            t.id as `key`,
            t.`name` as `value`
        from student t
        <where>
            <if test="lastKey != null">
                and t.id > #{lastKey}
            </if>
            <if test="matchValue != null and matchValue != '' ">
                <bind name="matchValue_pattern" value="'%' + matchValue + '%'" />
                and t.`name` like #{matchValue_pattern}
            </if>
        </where>
        order by t.id asc
        limit #{limit}
    </select>



