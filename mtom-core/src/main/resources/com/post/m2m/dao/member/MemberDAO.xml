<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.post.m2m.dao.member.MemberDAO">


    <sql id="memberColumns">
        ${alias}.id,
        ${alias}.m_name as mName,
        ${alias}.age
    </sql>


    <select id="findById" resultType="MemberPO">
        select
            <include refid="memberColumns"><property name="alias" value="t"/></include>
        from member t
        <where>
            and t.id = #{arg0}
        </where>
        limit 1
    </select>

    <select id="exist" resultType="boolean">
        select count(1) from member
        <where>
            and id = #{arg0}
        </where>
    </select>

    <insert id="_save" keyProperty="id" parameterType="MemberPO">
        insert into member(
        id,
        m_name,
        age
        ) VALUES (
        #{id,jdbcType=VARCHAR},
        #{mName,jdbcType=VARCHAR},
        #{age,jdbcType=INTEGER}
        )
    </insert>


    <update id="_update" parameterType="MemberPO">
        update member set
            m_name=#{mName,jdbcType=VARCHAR},
            age=#{age,jdbcType=INTEGER}
        where id=#{id,jdbcType=VARCHAR}
    </update>

    <delete id="delete">
        delete from member
        where id=#{arg0,jdbcType=VARCHAR}
    </delete>


    <sql id="queryCondition">
    </sql>

    <sql id="orderCondition">
        order by
            t.id desc
    </sql>

    <select id="findCountByQuery" parameterType="MemberQO" resultType="int">
        select count(1) from member t
        <where>
        <include refid="queryCondition"/>
        </where>
    </select>

    <select id="findListByQuery" parameterType="MemberQO" resultType="MemberListVO">
        select
            <include refid="memberColumns"><property name="alias" value="t"/></include>
        from member t
        <where>
        <include refid="queryCondition"/>
        </where>
        <include refid="orderCondition"/>
        limit #{startIndex},#{pageSize}
    </select>



